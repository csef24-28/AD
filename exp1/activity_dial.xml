<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center"
    tools:context=".Dial">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <Button android:id="@+id/b1"
                android:text="1"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b2"
                android:text="2"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b3"
                android:text="3"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <Button android:id="@+id/b4"
                android:text="4"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b5"
                android:text="5"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b6"
                android:text="6"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <Button android:id="@+id/b7"
                android:text="7"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b8"
                android:text="8"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b9"
                android:text="9"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <Button android:id="@+id/b11"
                android:text="*"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b22"
                android:text="0"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
            <Button android:id="@+id/b33"
                android:text="#"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <Button android:id="@+id/b111"
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:background="@drawable/dial"
                android:layout_marginLeft="50dp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>